				data:$('#doForm').serialize(),// 你的formid
				async: true,
				error:function(request){
				},
				beforeSend:function(){},
				success:function(data){
					if(data.info== ""||data.info==undefined){
						filterWarn("请登陆后在来评论");
						return false;
					}
					if(data.info=="login"){
						top.location=data.url;
					}

					filterWarn(data.info);


				},

			});
		});
		return false;
	})
</script>
